#!/bin/sh

build_dir=$1
cache_dir=$2

indent() {
  sed -u 's/^/       /'
}

export_env_dir() {
  env_dir=$3
  whitelist_regex=${2:-''}
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
      echo "$e" | grep -E "$whitelist_regex" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

# echo "pwd"
# pwd
# echo "ls ."
# ls
# echo "ls build_dir"
# ls $build_dir
# echo $build_dir
echo "Build dir:"
echo $build_dir
echo "Cache dir:"
echo $cache_dir
cd $cache_dir
exit 1

mkdir -p stack
cd stack

echo "-----> Downloading stack"
stack_bin="stack-0.1.2.0-x86_64-linux"
wget -nv https://github.com/commercialhaskell/stack/releases/download/v0.1.2.0/$stack_bin.gz| indent

echo "-----> Extracting stack binary"
gunzip $stack_bin.gz | indent
chmod +x $stack_bin | indent
stack_path=$(pwd)
echo "stack path:"
echo $stack_path
export PATH=$PATH:$stack_path
echo $PATH

cd ..
echo "-----> Installing yesod-bin, caba-install and ghc"
$stack_bin install yesod-bin cabal-install --install-ghc | indent

cd $build_dir
echo "-----> Building app with stack"
$stack_bin build --extra-lib-dirs libs | indent
exit 1
